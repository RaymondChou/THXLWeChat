<div class="row-fluid">

  <div class="box span12">
    <div class="box-header" data-original-title="">
      <h2><i class="halflings-icon user"></i><span class="break"></span>联系方式</h2>
      <a class="btn btn-small" style="float: right" href="<%= new_admin_contact_path %>">新建</a>
    </div>
    <div class="box-content">
      <table class="table table-striped table-bordered bootstrap-datatable">
        <thead>
        <tr>
          <th>头像</th>
          <th>姓名</th>
          <th>电话</th>
          <th>旁注</th>
          <th>介绍</th>
          <th>星级</th>
          <th>排序</th>
          <th>修改时间</th>
          <th>操作</th>
        </tr>
        </thead>
        <tbody>
        <% @contacts.each do |order| %>
          <tr>
            <td><img src="<%= order.avatar %>" style="height: 20px;"></td>
            <td class="center"><%= order.name %></td>
            <td class="center"><%= order.phone %></td>
            <td class="center"><%= order.zhiwei %></td>
            <td class="center"><%= order.info %></td>
            <td class="center"><%= order.star %></td>
            <td class="center"><%= order.sort %></td>
            <td class="center"><%= order.updated_at.strftime("%F %T") %></td>
            <td>
              <a class="btn btn-info" href="<%= edit_admin_contact_path(order) %>">
                编辑
              </a>
              <%= link_to '删除', admin_contact_path(order), :method => :delete,  :confirm => "确定要删除吗?", :title => '删除', :class => 'btn btn-danger' %>
            </td>
          </tr>
        <% end %>
        </tbody>
      </table>

      <%= will_paginate(@contacts) %>

    </div>
  </div><!--/span-->


</div>