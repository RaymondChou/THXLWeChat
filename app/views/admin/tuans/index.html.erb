<div class="row-fluid sortable">
  <div class="box span12">
    <div class="box-header" data-original-title="">
      <h2><i class="halflings-icon edit"></i><span class="break"></span>车展团购</h2>
    </div>
    <div class="box-content">
      <%= form_for [:admin, @news], :html => {:class => 'form-horizontal'} do |f| %>
        <fieldset>
          <div class="control-group">
            <label class="control-label">请配置微信文章链接 </label>
            <div class="controls">
              <%= f.text_field :url, :class => 'span6' %>
            </div>
          </div>
          <%= f.hidden_field :event %>

          <div class="form-actions">
            <%= f.submit :class => 'btn btn-primary', :value => '保存', :title => '请稍后' %>
          </div>
        </fieldset>
      <% end %>
    </div>
  </div><!--/span-->

</div><!--/row-->