<%= form_for [:admin, @ad], :html => {:class => 'form-horizontal'} do |f| %>
  <fieldset>
  <div class="control-group">
    <label class="control-label">跳转地址（不配置留空） </label>
    <div class="controls">
      <%= f.text_field :url, :class => 'span6' %>
    </div>
  </div>

  <div class="control-group">
    <label class="control-label">排序(升序) </label>
    <div class="controls">
      <%= f.text_field :sort, :class => 'span2' %>
    </div>
  </div>

  <div class="control-group">
    <label class="control-label">上传滚动图（850px × 490px） </label>
    <div class="controls">
      <%= f.file_field :image, :class => 'input-file uniform_o' %>
    </div>
  </div>


  <div class="form-actions">
    <%= f.submit :class => 'btn btn-primary', :value => '保存', :title => '请稍后' %>
    <a class="btn" title="请稍后" href="<%= url_for admin_ads_path %>" >返回</a>
  </div>
  </fieldset>
<% end %>