<div class="row-fluid">

  <div class="box span12">
    <div class="box-header" data-original-title="">
      <h2><i class="halflings-icon user"></i><span class="break"></span>满意度评价</h2>
    </div>
    <div class="box-content">
      <table class="table table-striped table-bordered bootstrap-datatable">
        <thead>
        <tr>
          <th>姓名</th>
          <th>手机</th>
          <th>咨询服务满意度</th>
          <th>销售人员素质满意度</th>
          <th>4S店工作效率满意度</th>
          <th>备注</th>
          <th>提交时间</th>
        </tr>
        </thead>
        <tbody>
        <% @evaluates.each do |order| %>
          <tr>
            <td><%= order.name %></td>
            <td class="center"><%= order.phone %></td>
            <td class="center"><%= order.service %></td>
            <td class="center"><%= order.suzhi %></td>
            <td class="center"><%= order.xiaolv %></td>
            <td class="center"><%= order.remark %></td>
            <td class="center"><%= order.created_at.strftime("%F %T") %></td>
          </tr>
        <% end %>
        </tbody>
      </table>

      <%= will_paginate(@evaluates) %>

    </div>
  </div><!--/span-->


</div>