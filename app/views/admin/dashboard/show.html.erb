<div class="row-fluid">

<div class="box span12">
<div class="box-header" data-original-title="">
  <h2><i class="halflings-icon user"></i><span class="break"></span>预约保养</h2>
</div>
<div class="box-content">
<table class="table table-striped table-bordered bootstrap-datatable">
<thead>
<tr>
  <th>姓名</th>
  <th>手机</th>
  <th>车牌</th>
  <th>里程数</th>
  <th>预约时间</th>
  <th>预约类型</th>
  <th>车型</th>
  <th>备注</th>
  <th>提交时间</th>
</tr>
</thead>
<tbody>
<% @order_cares.each do |order| %>
<tr>
  <td><%= order.name %></td>
  <td class="center"><%= order.phone %></td>
  <td class="center"><%= order.licence %></td>
  <td class="center"><%= order.run_count %>万</td>
  <td class="center"><%= order.time %></td>
  <td class="center"><%= order.care_type %></td>
  <td class="center"><%= order.car %></td>
  <td class="center"><%= order.remark %></td>
  <td class="center"><%= order.created_at.strftime("%F %T") %></td>
</tr>
<% end %>
</tbody>
</table>

  <%= will_paginate(@order_cares) %>

</div>
</div><!--/span-->


</div>